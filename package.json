{
  "name": "@nearform/llm-chunk",
  "private": false,
  "version": "1.0.2",
  "description": "Efficient, configurable text chunking utility for LLM vectorization. Returns rich chunk metadata.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "check": "npm run lint && npm run test:unit && npm run check-format",
    "check-format": "prettier --check .",
    "check-lint": "eslint .",
    "format": "prettier --write . && eslint --cache --fix .",
    "lint": "eslint .",
    "prebuild": "rm -rf dist",
    "prepare": "husky",
    "pretest": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "node --test dist/test/utils.spec.js dist/test/chunker.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/llm-chunk.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nearform/llm-chunk/issues"
  },
  "homepage": "https://github.com/nearform/llm-chunk#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.6.2",
    "tiktoken": "^1.0.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
